    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>loginForm.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>loginForm.RegisterServlet</servlet-class>
